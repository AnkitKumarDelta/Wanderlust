<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('searchInput').addEventListener('input', function () {
            var inputValue = this.value.trim().toLowerCase();
            var searchLink = document.getElementById('searchLink');

            // Update the search link href based on the user's input
            searchLink.href = "/listings/country/" + inputValue;

            // Optionally, you can handle the case where the input is empty
            if (inputValue === "") {
                searchLink.href = "/listings"; // Redirect to the default search page
            }
        });
    });
</script>